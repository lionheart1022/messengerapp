<!DOCTYPE html>
<html>
<head>
  <title>MessengerApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="main-container">
    <div class="container push-top">
      <div class="text-right actions">
        <% if user_signed_in? %>
            Welcome <strong><%= current_user.full_name %></strong>!
            <%= link_to 'Sign Out', :destroy_user_session, class: 'btn btn-danger', :method => :delete %>
        <% else %>
            <%= link_to 'Sign In', :new_user_session, class: 'btn btn-primary' %>
        <% end %>
      </div>
        <% if notice.present? %>
            <p class="alert notice alert-success"><%= notice %></p>
          <% end %>
        <% if alert.present? %>
            <p class="alert alert-danger"><%= alert %></p>
          <% end %>

        <%= yield %>
    </div>
</div>
</body>
</html>
