<h1>Listing messages</h1>

<table class="table">
  <thead>
    <tr>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender %></td>
        <td><%= message.receiver %></td>
        <td><%= message.content %></td>
        <td><i class="glyphicon glyphicon-book"></i> <%= link_to 'Show', message %></td>
        <td><i class="glyphicon glyphicon-edit"></i> <%= link_to 'Edit', edit_message_path(message) %></td>
        <td><i class="glyphicon glyphicon-remove"></i> <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Message', new_message_path, class:'btn btn-primary' %>
