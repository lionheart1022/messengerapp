<h1>Listing messages</h1>

<%= form_tag '/messages/search', method: :post do %>
    <%= text_field_tag :search, '' %>
    <%= text_field_tag :d, '' %>
    <%= submit_tag 'Submit' %>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Sender</th>
      <!--<th>Receiver</th>-->
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.sender.full_name %></td>
        <!--<td><%= message.receiver.full_name %></td>-->
        <td><%= message.content %></td>
        <td><i class="glyphicon glyphicon-book"></i> <%= link_to 'Show', message %></td>
        <td><i class="glyphicon glyphicon-remove"></i> <%= link_to 'Destroy', message, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'All Users', users_path, {class: 'btn btn-primary'} %>
<%= link_to 'New Message', new_message_path, class:'btn btn-primary' %>
<%= link_to 'View Sent Messages', sent_messages_path, class:'btn btn-primary' %>
